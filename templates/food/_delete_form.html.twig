<form method="post" action="{{ path('food_delete', {'fridgeid': food.idFloor.idFridge.id, 'id': food.id}) }}" onsubmit="return confirm('Are you sure you want to delete this food?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ food.id) }}">
    <button class="mb-1 btn btn-block btn-dark">Delete</button>
</form>
