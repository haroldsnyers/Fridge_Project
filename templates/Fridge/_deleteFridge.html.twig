<form method="post" action="{{ path('delete_fridge', {'id': fridge.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ fridge.id) }}">
    <button class="mb-1 btn btn-block btn-dark">Delete Fridge</button>
</form>