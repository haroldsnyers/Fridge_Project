{% extends 'base.html.twig' %}

{% block title %}Food{% endblock %}

{% block body %}
    <h1>Food</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ food.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ food.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ food.type }}</td>
            </tr>
            <tr>
                <th>Expiration_date</th>
                <td>{{ food.expirationDate ? food.expirationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ food.quantity }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('food_index') }}">back to list</a>

    <a href="{{ path('food_edit', {'id': food.id}) }}">edit</a>

    {{ include('food/_delete_form.html.twig') }}
{% endblock %}
