<form method="post" action="{{ path('floor_delete', {'fridgeid': floor.idFridge.id, 'id': floor.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ floor.id) }}">
    <button class="button-link">Delete</button>
</form>
